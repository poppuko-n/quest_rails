<div class="article-page">
  <div class="banner">
    <div class="container">
      <h1><%= @article.title %></h1>

      <div class="article-meta">
        <button class="btn btn-sm btn-outline-secondary">
          <%= link_to 'Edit Article', edit_article_path(@article), class: "ion-edit"  %>
        </button>
        <button class="btn btn-sm btn-outline-danger">
          <%= link_to 'Delete Article', article_path(@article), data:{ turbo_method: 'delete'}, class: "ion-trash-a"  %>
        </button>
      </div>
    </div>
  </div>

  <div class="container page">
    <div class="row article-content">
      <div class="col-md-12">
        <p>
          Web development technologies have evolved at an incredible clip over the past few years.
        </p>
        <h2 id="introducing-ionic"><%= @article.about%></h2>
        <p><%= @article.article %></p>
        <ul class="tag-list">
          <li class="tag-default tag-pill tag-outline"><%= @article.tag%></li>
        </ul>
      </div>
    </div>
  </div>
</div>